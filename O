-- Info GUI Script (عداد وقت شخصي يبدأ من دخول اللاعب)
-- ضعه في StarterPlayer > StarterPlayerScripts كـ LocalScript

local Players = game:GetService("Players")
local MarketplaceService = game:GetService("MarketplaceService")
local player = Players.LocalPlayer

-- إنشاء GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "InfoGUI"
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 250, 0, 200)
Frame.Position = UDim2.new(0.7, 0, 0.2, 0)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.Parent = UICorner

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Title.Text = "Info"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.Font = Enum.Font.SourceSansBold
Title.Parent = Frame

local Info = Instance.new("TextLabel")
Info.Size = UDim2.new(1, -10, 1, -40)
Info.Position = UDim2.new(0, 5, 0, 35)
Info.BackgroundTransparency = 1
Info.TextColor3 = Color3.fromRGB(255, 255, 255)
Info.TextXAlignment = Enum.TextXAlignment.Left
Info.TextYAlignment = Enum.TextYAlignment.Top
Info.Font = Enum.Font.SourceSans
Info.TextSize = 18
Info.Parent = Frame

-- العداد يبدأ من الصفر
local hours = 0
local minutes = 0
local seconds = 0

-- تحديث النص
local function updateInfo()
    local placeName = MarketplaceService:GetProductInfo(game.PlaceId).Name
    local serverPlayers = #Players:GetPlayers()

    Info.Text =
        "Player: " .. player.Name ..
        string.format("\nRuntime: %02dh %02dm %02ds", hours, minutes, seconds) ..
        "\nPlayers: " .. serverPlayers ..
        "\nPlace Name: " .. placeName ..
        "\nServer ID: " .. game.JobId
end

-- تشغيل العداد
task.spawn(function()
    while true do
        task.wait(1)
        seconds = seconds + 1
        if seconds >= 60 then
            seconds = 0
            minutes = minutes + 1
        end
        if minutes >= 60 then
            minutes = 0
            hours = hours + 1
        end
        updateInfo()
    end
end)

-- تحديث أول مرة
updateInfo()
